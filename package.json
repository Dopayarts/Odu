{
  "name": "odu-yoruba-writer",
  "version": "1.4.5",
  "type": "module",
  "description": "Professional Yoruba Diacritic Keyboard",
  "author": "Peace Toba Olatunji (Dopay)",
  "license": "UNLICENSED",
  "private": true,
  "repository": "https://github.com/Dopayarts/Odu",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "vite build && electron .",
    "dist": "electron-builder",
    "build:mobile": "vite build && npx cap sync",
    "android": "npx cap open android",
    "ios": "npx cap open ios",
    "postinstall": "node -e \"const fs=require('fs');const f='node_modules/@capacitor/keyboard/android/build.gradle';if(fs.existsSync(f)){fs.writeFileSync(f,fs.readFileSync(f,'utf8').replace(/proguard-android\\.txt/g,'proguard-android-optimize.txt'))}\""
  },
  "build": {
    "appId": "com.yoruba.odu",
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs",
      "package.json",
      "node_modules/uiohook-napi/**/*"
    ],
    "publish": {
      "provider": "github"
    },
    "copyright": "Copyright 2026 Peace Toba Olatunji (Dopay). All rights reserved.",
    "productName": "ODU Yoruba Writer",
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "legalTrademarks": "ODU Yoruba Writer is a trademark of Peace Toba Olatunji (Dopay)",
      "publisherName": "Peace Toba Olatunji (Dopay)"
    },
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.39",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.0.0",
    "vite": "^5.3.4"
  },
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/app": "^8.0.1",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.1",
    "@capacitor/status-bar": "^8.0.1",
    "@google/genai": "^1.41.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.8.3",
    "firebase": "^12.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-simple-maps": "^3.0.0",
    "uiohook-napi": "^1.5.4"
  }
}
